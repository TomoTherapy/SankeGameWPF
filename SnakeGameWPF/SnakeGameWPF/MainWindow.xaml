<Window x:Class="SnakeGameWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeGameWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="500" ResizeMode="NoResize"
         PreviewKeyDown="GameBoard_KeyDown">
    <Grid>
        <Grid x:Name="GameBoard" Margin="0" Background="DarkGray" PreviewKeyDown="GameBoard_KeyDown"/>
        <Button Name="GameStart_button" Content="START" Height="30" Width="100" Click="GameStart_button_Click"/>
    </Grid>
</Window>
